/* submitVideo/submitVideo.wxss */
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

form{
  width: 100%;
}

/*视频容器样式*/
.video{
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 2rpx 15rpx 15rpx #ececec;
}

video{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

/*表单项样式*/
.form-item{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ececec; 
  padding-bottom: 10rpx;
  margin-bottom: 30rpx;
}

.title{
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 15rpx;
}

.titleInput{
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1; 
  -webkit-box-orient: vertical; 
  overflow: hidden;
}

/*地址选择器样式*/
.locationChooser{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.locationChooser image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.locationChooser text{
  font-size: 35rpx;
  color: #868686;
}

/*按钮区域样式*/
.btnArea{
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-self: center;
}

button{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
}

.btnArea button:first-of-type{
  background-color: #545454;
  color: white;
}

.btnArea button:last-of-type{
  background-color: transparent;
}

/*类型选择样式*/

.typePicker{
  font-size: 30rpx;
  text-align: left;
  height: 80rpx;
  line-height: 80rpx;
  text-indent: 1em;
}
picker{
  width: 100%;
}

.selectedTypeContainer{
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.selectedTip{
  background-color: #4ba3ff;
  color: white;
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right: 20rpx;
  margin-top: 15rpx;
  padding: 10rpx;
  font-size: 28rpx;
}

.selectedTip image{
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}