/* newTip/newTip.wxss */
/*form-item样式*/
form{
  width: 100%;
}

.form-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 650rpx;
  box-sizing: border-box;
  margin: 30rpx auto; 
  text-align: center;
}

/*表单上传图片样式*/

.uploadPicsTitle,
.tipTitle,
.tipContentTitle,
.tipLocationTitle{
  display: block;
  align-self: flex-start;
  color: #dddddd;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.addPicBtn{
  width: 100%;
  height: 120rpx;
  border-radius: 10rpx;
  background-color: #f7f8fa;
  box-sizing: border-box;
  border: 2rpx solid #f5f5f5;
  text-align: center;
  font-weight: bolder;
  line-height: 120rpx;
  color: #c7c7c9;
}

.addedPics{
  width: 100%;
  height: 120rpx;
  border-radius: 10rpx;
  background-color: #f7f8fa;
  box-sizing: border-box;
  border: 2rpx solid #f5f5f5;
  color: #c7c7c9;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  text-align: center;
}

.addedPics image:first-of-type{
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
}

.addedPics image:last-of-type{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

/*类型选择样式*/

.typePicker{
  font-size: 30rpx;
  text-align: left;
  background-color: #f7f8fa;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-indent: 1em;
}
picker{
  width: 100%;
}

.selectedTypeContainer{
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.selectedTip{
  background-color: #4ba3ff;
  color: white;
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right: 20rpx;
  margin-top: 15rpx;
  padding: 10rpx;
  font-size: 28rpx;
}

.selectedTip image{
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

/*tip内容样式*/
.tipContent{
  width: 100%;
  height: 300rpx;
  background-color: #f7f8fa;
  box-sizing: border-box;
  border: 2rpx solid #ececec;
  text-align: left;
  font-size: 32rpx;
  text-indent: 0.5em;
}

.submitBtn,
.resetBtn{
  width: 650rpx;
  height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  border-radius: 2rpx;
  line-height: 80rpx;
}

.submitBtn{
  background-color: #4fa7ff;
  color: white;
  margin-bottom: 30rpx;
}

.submitBtn::after,
.resetBtn::after{
  border: none;
}

.resetBtn{
  margin-bottom: 30rpx;
}

/*Tip地址样式*/
map{
  width: 100%;
  height: 350rpx;
}

.mapLayout{
  position: absolute;
  background-color: rgba(0, 0, 0, 0.4);
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  padding: 10rpx;
  box-sizing: border-box;
  overflow: auto;
  color: whitesmoke;
  font-size: 30rpx;
  font-weight: bold;
  text-align: left;
  line-height: 60rpx;
}

