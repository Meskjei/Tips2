/* home/home.wxss */
page{
  display: flex;
  flex-direction: column;
}

.noResultReminder{
  font-weight: lighter;
  color: #868686;
  font: 30rpx;
  display: block;
  margin: 30rpx auto; 
  text-align: center;
}

/*搜索栏样式*/
.searchBar{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around; 
  align-items: center; 
}

.searchBar input{
  background-color: #ececec;
  font-size: 30rpx;
  height: 100%;
  width: 500rpx;
  text-indent: 30rpx;
  line-height: 2em;
}

.searchBar button{
  height: 100%;
  background-color: transparent;
  color: black;
  font-weight: bold;
  margin: 0;
  line-height: 60rpx;
  margin-right: 20rpx;
}

.searchBar button::after{
  border: none;
}

/*类型选择器样式*/
.typeSelector{
  margin-top: 15rpx;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
}

.type{
  display: inline-block;
  padding: 3rpx;
  color: #868686;
  font-size: 30rpx;
  border: 2rpx solid #ececec;
  margin-right: 40rpx;
  text-align: center;
}

.type:first-of-type{
  margin-left: 40rpx;
}

.actived{
  color: white !important;
  background-color: #868686;
}

/*覆盖层样式*/
.layout{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 99;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tipDetailContainer{
  position: relative;
  width: 700rpx;
  height: 1000rpx;
  background-color: white;
  opacity: 1;
  border-radius: 15rpx;
  box-shadow: 1rpx 1rpx 3rpx #333333;
}

.tipDetailContainer swiper, 
.tipDetailContainer swiper swiper-item, 
.tipDetailContainer swiper swiper-item image{
  width: 100%;
  height: 450rpx;
  overflow: hidden;
  border-radius: 15rpx;
}

.tipDetailContainer swiper{
  position: absolute;
  left: 0;
  top: 0;
}

.tipDetail{
  position: absolute;
  top: 350rpx;
  left: 0;
  width: 100%;
  padding: 30rpx;
  background-color: white;
  color: #9e9e9e;
  box-sizing: border-box;
  min-height: 100rpx;
  z-index: 999;
  overflow: auto;
  font-size: 30rpx;
}

.tipLocation{
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  color: #00a2f9;
  font-weight: bolder;
}

.nav{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border-left: 1rpx solid #ececec;
  padding-left: 20rpx;
  
}

.nav image{
  width: 45rpx;
  height: 45rpx;
}